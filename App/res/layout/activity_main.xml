<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >

    <!-- Header element. -->
    <RelativeLayout
        android:id="@+id/grpHeader"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@string/colour_blue" >

        <!-- Title/Name of the application. -->
        <TextView
            android:id="@+id/lblTitle"
            style="@style/Text.Large"
            android:text="@string/app_name"
            android:textColor="@string/colour_white" />

        <!-- Context-sensitive add button, adds a new item. -->
        <Button
            android:id="@+id/btnAdd"
            style="@style/Button.Right"
            android:layout_marginRight="105dp" />

        <!-- Context-sensitive remove button, removes all selected items. -->
        <Button
            android:id="@+id/btnRemove"
            style="@style/Button.Right"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true" />

        <!-- Transactions button, takes user to the transactions screen. -->
        <Button
            android:id="@+id/btnTransactions"
            style="@style/Button.Right"
            android:layout_marginRight="35dp"
            android:layout_alignParentRight="true" />

        <!-- Summary button, toggles a summary window. -->
        <Button
            android:id="@+id/btnSummary"
            style="@style/Button"
            android:layout_alignParentRight="true" />
        
        <!-- TODO: Consider setting a constant for the width of buttons. -->
    	<!-- TODO: Add icons/images to buttons. -->
    	<!-- TODO: Add shadow. -->
    </RelativeLayout>
    
    <!-- Container to vertically display all filters. -->
    <LinearLayout
        android:id="@+id/grpFilters"
        style="@style/LinearWrap.Vertical"
        android:background="@string/colour_light_gray"
        android:layout_below="@id/grpHeader" >
		
        <!-- Container for the "date from" filter. -->
        <LinearLayout
	        style="LinearWrap.Horizontal.Filter" >
            
            <Button
	            android:id="@+id/btnPreviousDateFrom"
	            style="@style/Button" />
            <TextView
            	android:id="@+id/lblDateFrom"
	            style="@style/Text.Filter" />
            <Button
	            android:id="@+id/btnNextDateFrom"
	            style="@style/Button" />
        </LinearLayout>
        
        <!-- Container for the "date to" filter. -->	
        <LinearLayout
	        style="LinearWrap.Horizontal.Filter" >
            
            <Button
	            android:id="@+id/btnPreviousDateTo"
	            style="@style/Button" />
            <TextView
            	android:id="@+id/lblDateTo"
	            style="@style/Text.Filter" />
            <Button
	            android:id="@+id/btnNextDateTo"
	            style="@style/Button" />
        </LinearLayout>
        	
        <!-- Container for the "flow" (income/outgoing/all) filter. -->
        <LinearLayout
        	android:id="@+id/grpFlowFilter"
	        style="LinearWrap.Horizontal.Filter" >
	        
            <Button
	            android:id="@+id/btnPreviousFlow"
	            style="@style/Button" />
            <TextView
            	android:id="@+id/lblFlow"
	            style="@style/Text.Filter" />
            <Button
	            android:id="@+id/btnNextFlow"
	            style="@style/Button" />
        </LinearLayout>
        
        <!-- TODO: Add top and bottom padding. -->
    </LinearLayout>
    
    <!-- Container to vertically list accounts, budgets, and transactions. -->
    <LinearLayout
        android:id="@+id/grpItems"
        style="@style/LinearWrap.Vertical"
        android:background="@string/colour_white"
        android:layout_below="@id/grpFilters" >

    </LinearLayout>
    
    <!-- Container to horizontally displays circles representing different screens. -->
	<LinearLayout
        android:id="@+id/grpScreens"
        style="@style/LinearWrap.Horizontal"
        android:background="@string/colour_light_gray"
        android:layout_alignParentBottom="true" >
	    
	    <!-- TODO: Add circles. -->
	</LinearLayout>
	
	<!-- Container to vertically display summary information. -->
	<LinearLayout
        android:id="@+id/grpSummary"
        style="@style/LinearWrap.Vertical"
        android:background="@string/colour_light_gray"
        android:visibility="gone" >
        
	    <!-- TODO: Determine layout colour and size properties. -->
	</LinearLayout>
</RelativeLayout>
